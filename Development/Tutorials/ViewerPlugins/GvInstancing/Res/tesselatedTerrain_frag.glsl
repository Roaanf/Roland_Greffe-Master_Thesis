////////////////////////////////////////////////////////////////////////////////
//
// FRAGMENT SHADER
//
// Terrain rendering
//
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// VERSION
////////////////////////////////////////////////////////////////////////////////

#version 400

////////////////////////////////////////////////////////////////////////////////
// INPUT
////////////////////////////////////////////////////////////////////////////////

// Texture coordinate
in vec2 TexCoord;

////////////////////////////////////////////////////////////////////////////////
// UNIFORM
////////////////////////////////////////////////////////////////////////////////

// Land
uniform sampler2D uLandTexture;

////////////////////////////////////////////////////////////////////////////////
// OUTPUT
////////////////////////////////////////////////////////////////////////////////

// Ouput color
layout (location = 0) out vec4 oColor;

////////////////////////////////////////////////////////////////////////////////
// PROGRAM
////////////////////////////////////////////////////////////////////////////////
void main()
{
	vec3 terrainColor = texture( uLandTexture, 15.0/*scale*/ * TexCoord ).xyz;
	//terrainColor /= vec3( 255.0 );
	oColor = vec4( terrainColor, 1.0 );

	//oColor = vec4( 0.0, 0.0, 1.0, 1.0 );
}
