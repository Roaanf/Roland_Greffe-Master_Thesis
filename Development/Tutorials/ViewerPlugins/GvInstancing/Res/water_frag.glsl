////////////////////////////////////////////////////////////////////////////////
//
// FRAGMENT SHADER
//
// Sky box rendering
//
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// VERSION
////////////////////////////////////////////////////////////////////////////////

#version 400

////////////////////////////////////////////////////////////////////////////////
// INPUT
////////////////////////////////////////////////////////////////////////////////

// Texture coordinate
in vec2 TexCoord;

////////////////////////////////////////////////////////////////////////////////
// UNIFORM
////////////////////////////////////////////////////////////////////////////////

// Water
uniform sampler2D uWaterTex;;

////////////////////////////////////////////////////////////////////////////////
// OUTPUT
////////////////////////////////////////////////////////////////////////////////

// Ouput color
layout (location = 0) out vec4 oColor;

////////////////////////////////////////////////////////////////////////////////
// PROGRAM
////////////////////////////////////////////////////////////////////////////////
void main()
{
	// Retrieve water color
	vec3 waterColor = texture( uWaterTex, 5.0/*scale*/ * TexCoord ).xyz;
	
	oColor = vec4( waterColor, 0.5 );
}
