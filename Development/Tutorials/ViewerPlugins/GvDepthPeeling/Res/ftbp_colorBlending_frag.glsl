////////////////////////////////////////////////////////////////////////////////
//
// FRAGMENT SHADER
//
// Front to back peeling
// - This shader program is used to blend color of parts of geometry
//
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// VERSION
////////////////////////////////////////////////////////////////////////////////

#version 400

////////////////////////////////////////////////////////////////////////////////
// INPUT
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// UNIFORM
////////////////////////////////////////////////////////////////////////////////

// Color texture of a previous front geometry
uniform sampler2DRect uColorTexture;

////////////////////////////////////////////////////////////////////////////////
// OUTPUT
////////////////////////////////////////////////////////////////////////////////

// Fragment color
layout (location = 0) out vec4 oFragmentColor;

////////////////////////////////////////////////////////////////////////////////
// PROGRAM
////////////////////////////////////////////////////////////////////////////////
void main()
{
	// Write color
	oFragmentColor = texelFetch( uColorTexture, ivec2( gl_FragCoord.x, glFragCoord.y ) );
}
